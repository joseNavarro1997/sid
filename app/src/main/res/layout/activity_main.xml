        <!-- Botón para la búsqueda
             (código obtenido de https://developer.android.com/reference/android/widget/Button?hl=es
              y adaptado con ayuda de Android Studio (código predictivo al ir escribiendo, por ejemplo)
         -->
    <Button
        android:id="@+id/button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_busqueda"
        tools:ignore="MissingConstraints"
        android:translationX="170dp"
        android:translationY="650dp"/>

    <!-- GUI diseño Android Studio
        -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
